<%- include("header") -%>
    
<div class="box" id="heading">
      <h1>It's a <%= kindOfDay %></h1>
    </div>
    <div class="box">
      
      <% for (let index = 0; index < newListItem.length; index++) { %>
      <div class="item">
        <input type="checkbox" id="" />
        <p><%= newListItem[index] %></p>
      </div>
      <% } %>

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="newItem"
          id=""
          placeholder="New Item"
          autocomplete="off"
        />
        <button type="submit" name="button">+</button>
      </form>
    </div>

<%- include("footer") -%>